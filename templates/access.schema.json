{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AnyApp Tenant Access",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "tenant", "owners", "members", "domains", "roles"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "tenant": {
      "type": "string",
      "pattern": "^[a-z0-9-]{1,32}$"
    },
    "project_name": {
      "type": "string",
      "minLength": 1
    },
    "owners": {
      "type": "array",
      "items": { "type": "string", "format": "email" },
      "uniqueItems": true
    },
    "members": {
      "type": "array",
      "items": { "type": "string", "format": "email" },
      "uniqueItems": true
    },
    "domains": {
      "type": "array",
      "items": { "type": "string", "pattern": "^[a-z0-9.-]+\\.[a-z]{2,}$" }
    },
    "roles": {
      "type": "object",
      "additionalProperties": { "type": "string", "minLength": 1 }
    }
  }
}
