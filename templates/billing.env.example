# Example billing/provisioner env rendered by CI (do NOT commit real secrets)
NODE_ENV=production
APP_PORT=8080
# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Price for subscription plan used by Checkout Session
STRIPE_PRICE_ID=
# Post-checkout redirect URLs (can include placeholders if you handle them client-side)
CHECKOUT_SUCCESS_URL=
CHECKOUT_CANCEL_URL=
# Optional SSO
SSO_SHARED_SECRET=
TENANT_ROOT_DOMAIN=example.com
# Max slug length (DNS label <=63). Set 36 to allow UUID slugs.
TENANT_SLUG_MAX_LEN=32
# GitHub PR automation (optional)
GITHUB_REPO=
GITHUB_TOKEN=
GITHUB_DEFAULT_BRANCH=main
GIT_AUTHOR_NAME=Provisioner Bot
GIT_AUTHOR_EMAIL=changeme@example.com
# GHCR (optional)
GHCR_USER=
GHCR_TOKEN=
